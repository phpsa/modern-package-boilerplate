{
  "name": "modern-package-boilerplate",
  "version": "2.3.4-custom",
  "description": "Powerfull, flexible and easy-to-use boilerplate for creating modern npm packages. Features: rollup, babel, react (optional), flow (optional), jest, enzyme, eslint, travis-ci, coveralls, renovate",
  "keywords": [
    "npm-package",
    "package",
    "npm",
    "boilerplate",
    "rollup",
    "babel",
    "react",
    "flow",
    "jest",
    "enzyme",
    "eslint",
    "travis",
    "travis-ci",
    "coveralls",
    "renovate"
  ],
  "license": "MIT",
  "repository": "https://github.com/phpsa/modern-package-boilerplate",
  "contributors": [
    {
      "name": "Craig Smith",
      "email": "vxdhost@gmail.com"
    }
  ],
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf ./coverage ./lib",
    "dev": "cross-env NODE_ENV=development rollup -c -o lib/index.js",
    "build": "cross-env NODE_ENV=production rollup -c -o lib/index.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cover": "cross-env NODE_ENV=test jest --coverage",
    "coveralls": "yarn test:cover && cat ./coverage/lcov.info | coveralls",
    "flow": "flow",
    "flow-typed": "yarn clean && flow-typed install --overwrite || true",
    "lint": "eslint src",
	"prepublish": "yarn clean && yarn test && yarn flow && yarn lint && yarn build && yarn storybook:build",
	"storybook": "start-storybook -c ./.storybook -p 9001",
	"storybook:build": "build-storybook -c ./.storybook -o ./public"

  },
  "peerDependencies": {
    "react": "^16.8",
    "react-dom": "^16.8"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "devDependencies": {
	"@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-info": "^5.0.11",
    "@storybook/addon-jest": "^5.0.11",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-notes": "^5.0.11",
    "@storybook/addon-options": "^5.0.11",
    "@storybook/addon-viewport": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "coveralls": "3.0.0",
    "cross-env": "5.1.4",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "flow-bin": "0.70.0",
    "flow-typed": "2.4.0",
    "fs-file-tree": "1.0.6",
    "jest": "22.4.3",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "rimraf": "2.6.2",
    "rollup": "0.58.1",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-commonjs": "9.1.0",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-uglify": "3.0.0"
  }
}
